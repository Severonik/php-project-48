#!/usr/bin/env php
<?php
require 'vendor/autoload.php';

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)

  Options:
  -h --help                     Show this screen.
  -v --version                  Show version.
  --format <fmt>                Report format [default: stylish]

DOC;

$args = \Docopt::handle($doc);

if ($args['--help']) {
    echo $doc;
} elseif ($args['--version']) {
    echo "gendiff version 1.0.0\n";
} elseif ($args['<firstFile>'] && $args['<secondFile>']) {
    $firstFile = $args['<firstFile>'];
    $secondFile = $args['<secondFile>'];
    $format = $args['--format'];
    echo "Comparing '{$firstFile}' and '{$secondFile}' in '{$format}' format...\n";
}
